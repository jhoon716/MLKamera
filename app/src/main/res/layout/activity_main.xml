<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.mlkamera.GraphicOverlay
            android:id="@+id/graphicOverlay_finder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:showDividers="middle"
        android:background="@color/transparent_white"
        app:layout_constraintEnd_toEndOf="@id/finder"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:id="@+id/eye_button"
            android:background="@drawable/ic_blink"
            android:backgroundTint="@color/icon_grey"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            app:layout_constraintEnd_toStartOf="@+id/smile_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/smile_button"
            android:layout_marginLeft="88dp"
            android:backgroundTint="@color/icon_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            app:layout_constraintEnd_toStartOf="@+id/shutter_button"
            app:layout_constraintStart_toStartOf="@id/eye_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_smile" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shutter_button"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginRight="140dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/round_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/flip_button"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/flip_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="88dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_repeat"
            android:tint="@color/icon_grey"
            app:layout_constraintStart_toEndOf="@+id/shutter_button" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gallery_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/black"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flip_button" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/transparent_white"
        app:layout_constraintBottom_toTopOf="@id/buttonPanel">

        <Button
            android:id="@+id/cam1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cam2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cam3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cam4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>